                console.log(['click p',hand,hand.nextElementSibling.style.visibility]); 
                if(hand.nextElementSibling.style.visibility=='hidden'){
                    console.log(['is hide']);
                    hand.nextElementSibling.style.visibility='visible'
                }else{
                    console.log(['is show'])
                    hand.nextElementSibling.style.visibility='hidden'
                }}
        </script>
